<ul class="post-list">
  {{#each posts as |post|}}
    <li>
      <article class="post">
        <div class="title">
          <div class="flex-row justify-space-between">
            <div class="col-12 mb-2 bg-dark text-light p-3">
              <h3 class="portfolio-item-title text-light">{{title}}</h3>
              Posted by
              {{user.username}}
              on
              {{created_at}}
            </div>
            <p>{{text_body}}</p>
          </div>

        </div>
        <div class="meta">
          |
          <a href="/post/{{post.id}}">{{comments.length}} comment(s)</a>
        </div>
      </article>
    </li>
  {{/each}}
</ul>