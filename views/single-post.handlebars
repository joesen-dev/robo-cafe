<article class="post">
  <div class="title">
    <div class="flex-row justify-space-between">
      <div class="col-12 mb-2 bg-dark text-light p-3">
        <h3 class="portfolio-item-title text-light">{{post.title}}</h3>
        Posted by
        {{post.user.username}}
        on
        {{post.created_at}}
      </div>
      <p>{{post.text_body}}</p>
    </div>

  </div>
  <div class="meta">
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

{{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
    </div>
  </form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>

{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}