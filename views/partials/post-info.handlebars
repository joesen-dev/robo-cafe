<article class="post">
  <div class="card stick-action blue-grey darken-1">
    <div class="card-content white-text">
      <div class="title">
        <div class="col-12 mb-2 bg-dark text-light p-3">
          <a href="/post/{{id}}">
            <h3 class="portfolio-item-title text-light">{{title}}</h3>
          </a>
        </div>
        <p>{{text_body}}</p>
      </div>
      <div class="meta">
        Posted by
        {{user.username}}
        on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}}
          {{format_plural "comment" comments.length}}</a>
      </div>
    </div>
  </div>
</article>